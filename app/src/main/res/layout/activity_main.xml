<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondo_degradado">


   <ImageView
       android:layout_width="265dp"
       android:layout_height="235dp"
       android:layout_alignParentStart="true"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_marginStart="66dp"
       android:layout_marginTop="60dp"
       android:src="@drawable/icono"

       />

 <TextView
     android:id="@+id/textView"
     android:layout_width="263dp"
     android:layout_height="53dp"
     android:layout_alignParentTop="true"
     android:layout_alignParentEnd="true"
     android:layout_marginTop="54dp"
     android:layout_marginEnd="57dp"
     android:fontFamily="sans-serif-light"
     android:text="Turismo Deportre Cauca Bienvenidos "
     android:textAlignment="center"
     android:textColor="#6E0096"
     android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextTextEmailAddress2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="213dp"
        android:layout_marginEnd="104dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="#673AB7"
        tools:text="" />

    <EditText
        android:id="@+id/editTextTextPassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTextEmailAddress2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="96dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="88dp"
        android:layout_height="83dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="171dp"
        android:layout_marginTop="546dp"
        android:src="@drawable/ic_fingerprint" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextTextPassword2"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-98dp"
        android:background="@drawable/butoon"
        android:text="Iniciar sesion"
        android:textAllCaps="false" />


</RelativeLayout>